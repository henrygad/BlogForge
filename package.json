{
  "name": "@henry0rji/blogforge",
  "version": "1.1.6",
  "description": "A powerful CLI and Server tool for generating and managing AI-powered blog content locally.",
  "type": "module",
  "bin": {
    "blogforge": "dist/cli.js"
  },
  "files": [
    "dist",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "start": "node dist/server.js",
    "blogforge": "node dist/cli.js",
    "dev:server": "tsx src/server.ts",
    "dev:blogforge": "tsx src/cli.ts",
    "test": "node test-runner.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "cli",
    "blog",
    "generator",
    "ai",
    "content",
    "static-site"
  ],
  "author": "Henry Orji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrygad/BlogForge.git"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "nodemon": "^3.1.10",
    "tsup": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "preferGlobal": true
}
